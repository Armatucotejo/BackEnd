<p id="notice"><%= notice %></p>

<h1>Sports Stores</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sports_stores.each do |sports_store| %>
      <tr>
        <td><%= sports_store.address %></td>
        <td><%= link_to 'Show', sports_store %></td>
        <td><%= link_to 'Edit', edit_sports_store_path(sports_store) %></td>
        <td><%= link_to 'Destroy', sports_store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

